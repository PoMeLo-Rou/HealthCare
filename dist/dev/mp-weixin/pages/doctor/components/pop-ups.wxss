
.pop {
		padding: 20rpx;
}
.pop-tit {
		display: block;
		text-align: center;
		height: 80rpx;
		line-height: 80rpx;
		font-weight: 600;
}
.pop-time {
		display: flex;
		align-items: center;
		color: #3399ff;
}
.pop-time text {
		display: block;
		width: 260rpx;
		height: 90rpx;
		line-height: 90rpx;
		text-align: center;
		
		border: 1px solid #e4e4e4;
		margin: 20rpx 0;
}
.pop-choice {
		margin-top: 20rpx;
		display: flex;
		justify-content: space-between;
		align-items: center;
		color: #3399ff;
}
.img {
		display: flex;
		align-items: center;
}
.img image {
		width: 80rpx;
		height: 80rpx;
		margin-right: 10rpx;
}
.reserve {
		margin-top:60rpx;
		height: 90rpx;
		line-height: 90rpx;
		width: 100%;
		background-color: #3399ff;
		color: #ffffff;
		text-align: center;
}
.selected {
		background-color: #3399ff;
		color: #ffffff;
}
